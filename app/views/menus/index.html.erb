<div class="container mt-4">
  <div class="row row-cols-2 row-cols-md-4 g-4">
    <% @menus.each do |menu| %>
      <div class="col">
        <% if menu.is_available_today %>
          <%= link_to confirm_menu_path(menu), class: "card-link text-decoration-none text-white" do %>
            <div class="card h-100 position-relative">
              <%= image_tag(menu.image_url, class: "card-img menu-img") if menu.image_url.present? %>
              <div class="menu-overlay">
                <div class="overlay-text">
                  <div><%= menu.name %></div>
                  <div><%= menu.price %>円</div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="card h-100 position-relative">
            <%= image_tag(menu.image_url, class: "card-img menu-img") if menu.image_url.present? %>
            <div class="unavailable-overlay">
              本日は受け付けておりません
            </div>
            <div class="menu-overlay">
              <div class="overlay-text">
                <div><%= menu.name %></div>
                <div><%= menu.price %>円</div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-between align-items-center mt-4">
    <%= paginate @menus %>
    <%= link_to "注文を確認する", orders_path, class: "btn btn-primary ms-auto" %>
  </div>
</div>
